.map
  position relative
  width 100%
  height 400px

.clickable
  cursor pointer

.hover_block
  display block
  background #5d4037
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
  span
    display block
    padding 0.5rem 1rem
    color #fff
    box-sizing border-box


th
  background #d0d0d0
  border-radius 0
  user-select none
  cursor pointer
  position relative
  i
    position absolute
    right 10px

.line-wrapper
  padding 15px

.widget
  margin-top 50px

.header
  width 100%
  padding 15px
  font-size 22px
  display inline-block

@media (max-width: 850px)
  .brand-logo
    display none !important